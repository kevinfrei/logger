{
  "name": "@freik/logger",
  "version": "0.1.0",
  "description": "A simple (typed!) wrapper around 'debug'",
  "author": "Kevin Frei (kevinfrei@hotmail.com)",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/kevinfrei/logger/issues"
  },
  "homepage": "https://github.com/kevinfrei/logger#readme",
  "keywords": [
    "js-utils",
    "logging",
    "logger",
    "typescript"
  ],
  "repository": "github:kevinfrei/logger",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "watch": "jest --watch --config jestconfig.json",
    "clean": "rimraf lib .tsbuildinfo",
    "release": "yarn clean && tsc --project tsconfig.opt.json && yarn ftool minify -i -r lib",
    "build": "tsc --project tsconfig.json",
    "cleanbuild": "yarn clean && yarn build",
    "postinstall": "husky install",
    "prepublishOnly": "yarn test && yarn lint && yarn pinst --disable",
    "postpublish": "yarn pinst --enable",
    "prepare": "yarn release",
    "format": "yarn run prettier -w package.json src/**/*.ts",
    "lint": "eslint --fix --ext .ts src",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit --project tsconfig.json",
    "chk": "yarn format && yarn lint && yarn compile && yarn test",
    "doc": "typedoc ./src/index.ts --readme none --tsconfig tsconfig.json"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.6.0",
    "@freik/core-utils": "^1.4.5",
    "@jest/types": "^29.5.0",
    "@types/debug": "^4.1.8",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "5.0.4"
  },
  "files": [
    "lib/*"
  ],
  "engines": {
    "node": "^14.13.1 || >= 16.0.0"
  },
  "packageManager": "yarn@3.6.0",
  "dependencies": {
    "debug": "^4.3.4"
  }
}
