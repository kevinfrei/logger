{
  "transform": {
    "^.+\\.(t|j)sx?$": ["ts-jest", { "tsconfig": "tsconfig.cjs.json" }]
  },
  "extensionsToTreatAsEsm": [".ts", ".tsx"],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "collectCoverage": true
}
